<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nhấn -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#1C8FBD" /> <!-- Màu tối hơn khi nhấn -->
            <corners android:radius="50dp" android:topRightRadius="50dp"/>
        </shape>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <shape>
            <solid android:color="#1B77B6" /> <!-- Màu nền mặc định -->
            <corners android:radius="50dp" android:topRightRadius="50dp"/>
        </shape>
    </item>
</selector>
