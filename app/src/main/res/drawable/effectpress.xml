<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Trạng thái khi được nhấn xuống -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#155E8C" /> <!-- Màu tối hơn khi nhấn -->
            <corners android:radius="50dp" android:topRightRadius="50dp"/>
        </shape>
    </item>

    <!-- Trạng thái khi di chuột qua (Chỉ hoạt động trên thiết bị hỗ trợ - Android TV, ChromeOS, ...) -->
    <item android:state_hovered="true">
        <shape>
            <solid android:color="#1E90FF" /> <!-- Màu sáng hơn khi di chuột -->
            <corners android:radius="50dp" android:topRightRadius="50dp"/>
        </shape>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <shape>
            <solid android:color="#1B77B6" /> <!-- Màu nền mặc định -->
            <corners android:radius="50dp" android:topRightRadius="50dp"/>
        </shape>
    </item>

</selector>
