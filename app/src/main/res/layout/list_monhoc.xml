<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_infor"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/time_Monhoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time_Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06:45"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/line" />

        <TextView
            android:id="@+id/time_End"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:45"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/infor_Monhoc"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/maMH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="750442 - Bong ban - PE2401"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/maLop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sáng thứ 2, - 06:45 - 07:45, NTD"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/weekStudy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuần 30"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:gravity="right|center"
        android:text=">"
        android:textColor="#575555"
        android:textSize="30dp" />
</LinearLayout>